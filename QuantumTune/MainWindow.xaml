<Window x:Class="WindowsOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:WindowsOptimizer.ViewModels"
        mc:Ignorable="d"
        Title="QuantumTune Max" Height="650" Width="950"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A"
        BorderBrush="#252525" BorderThickness="1"
        Foreground="White"
        Visibility="Visible"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left navigation panel -->
        <Border Grid.Column="0" Background="#202020">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo area -->
                <Grid Grid.Row="0" Height="120">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="QuantumTune" Foreground="White" FontSize="20"
                                   FontWeight="Bold" HorizontalAlignment="Center" />
                        <TextBlock Text="ALPHA" Foreground="#9B59B6" FontSize="14"
                                   FontWeight="Bold" HorizontalAlignment="Center" Margin="0,2,0,0" />
                    </StackPanel>
                </Grid>

                <!-- Navigation items -->
                <StackPanel Grid.Row="1">
                    <Button Content="System Status" Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateCommand}" CommandParameter="SystemStatusPage"
                            Foreground="{Binding CurrentPage, Converter={StaticResource NavigationColorConverter}, ConverterParameter=SystemStatusViewModel}" />

                    <Button Content="System Information" Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateCommand}" CommandParameter="SystemInfoPage"
                            Foreground="{Binding CurrentPage, Converter={StaticResource NavigationColorConverter}, ConverterParameter=SystemInfoViewModel}" />

                    <Button Content="Startup Items" Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateCommand}" CommandParameter="StartupItemsPage"
                            Foreground="{Binding CurrentPage, Converter={StaticResource NavigationColorConverter}, ConverterParameter=StartupItemsViewModel}" />

                    <Button Content="Disk Cleaner" Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateCommand}" CommandParameter="DiskCleanerPage"
                            Foreground="{Binding CurrentPage, Converter={StaticResource NavigationColorConverter}, ConverterParameter=DiskCleanerViewModel}" />

                    <Button Content="Settings" Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateCommand}" CommandParameter="SettingsPage"
                            Foreground="{Binding CurrentPage, Converter={StaticResource NavigationColorConverter}, ConverterParameter=SettingsViewModel}" />

                    <Button Content="Support" Style="{StaticResource NavButtonStyle}"
                            Command="{Binding NavigateCommand}" CommandParameter="SupportPage"
                            Foreground="{Binding CurrentPage, Converter={StaticResource NavigationColorConverter}, ConverterParameter=SupportViewModel}" />
                </StackPanel>

                <!-- Version info at bottom -->
                <TextBlock Grid.Row="2" Text="Alpha Version 1.0.0" Foreground="#666666" FontSize="10"
                           Margin="0,0,0,10" HorizontalAlignment="Center" />
            </Grid>
        </Border>

        <!-- Content area -->
        <Grid Grid.Column="1">

            <Grid Background="#1A1A1A"
                  Visibility="{Binding IsPageLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                  Panel.ZIndex="999">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Ellipse Width="80" Height="80" Stroke="#9B59B6" StrokeThickness="6" Opacity="0.3" />
                    <TextBlock Text="Loading..." FontSize="18" FontWeight="Bold" Foreground="White" Margin="0,20,0,0" />
                </StackPanel>
            </Grid>

            <Grid HorizontalAlignment="Stretch" x:Name="WarningPanel" VerticalAlignment="Top" ZIndex="99999"
                  Margin="0,60,0,0" Background="#111" Height="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="⚠️ Some optimizations require administrator rights"
                           Foreground="#FFA500"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />

                <TextBlock Grid.Column="1"
                           Text="X"
                           Foreground="White"
                           Margin="5,0,10,0"
                           VerticalAlignment="Center"
                           MouseDown="CloseWarning_MouseDown" />
            </Grid>
            <ContentControl Content="{Binding CurrentPage}">
                <ContentControl.Resources>
                    <!-- Define data templates for each page type -->

                    <!-- System Status Page -->
                    <DataTemplate DataType="{x:Type viewmodels:SystemStatusViewModel}">
                        <!-- System Status Page Content -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Top toolbar -->
                            <Border Grid.Row="0" Background="#252525" BorderBrush="#333333" BorderThickness="0,0,0,1">
                                <TextBlock Text="SYSTEM ANALYSIS" Foreground="#BBBBBB" FontSize="16"
                                           FontWeight="Medium" VerticalAlignment="Center" Margin="20,0,0,0" />
                            </Border>

                            <!-- Main content -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Scan area -->
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!-- Status indicators -->
                                    <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <Border Style="{StaticResource InfoPanelStyle}" Width="450" Margin="0,0,0,20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Grid.Column="0" Width="12" Height="12"
                                                         Fill="{Binding SystemNeedsOptimization, Converter={StaticResource BoolToColorConverter}}"
                                                         Margin="0,0,10,0" />

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding SystemNeedsOptimization, Converter={StaticResource OptimizationStatusConverter}}"
                                                           Foreground="White" VerticalAlignment="Center" />

                                                <TextBlock Grid.Column="2"
                                                           Text="{Binding ScanResults.IssuesCount}"
                                                           Visibility="{Binding SystemNeedsOptimization, Converter={StaticResource BoolToVisibilityConverter}}"
                                                           Foreground="#FFA500"
                                                           FontWeight="Bold" VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <!-- Scan button and Animation Container -->
                                    <Grid Grid.Row="1" HorizontalAlignment="Center">
                                        <!-- Scan/Clean Button -->
                                        <Button Style="{StaticResource ScanButtonStyle}"
                                                Command="{Binding ScanOrCleanCommand}"
                                                Visibility="{Binding IsScanning, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                            <StackPanel>
                                                <TextBlock
                                                    Text="{Binding SystemNeedsOptimization, Converter={StaticResource OptimizationButtonTextConverter}}"
                                                    Foreground="White" FontSize="24" FontWeight="Bold"
                                                    HorizontalAlignment="Center" />
                                                <TextBlock
                                                    Text="{Binding SystemNeedsOptimization, Converter={StaticResource OptimizationButtonSubtextConverter}}"
                                                    Foreground="#BBBBBB" FontSize="12"
                                                    HorizontalAlignment="Center" Margin="0,5,0,0" />
                                            </StackPanel>
                                        </Button>

                                        <Canvas Style="{StaticResource ScanningProgressStyle}"
                                                Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <!-- Outer circle with gradient -->
                                            <Ellipse Width="160" Height="160" Canvas.Left="0" Canvas.Top="0">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#8E44AD" Offset="0" />
                                                        <GradientStop Color="#9B59B6" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>

                                            <!-- Inner circle -->
                                            <Ellipse Width="144" Height="144" Canvas.Left="8" Canvas.Top="8"
                                                     Fill="#252525" />

                                            <!-- Spinning Lines Container -->
                                            <Canvas Width="160" Height="160">
                                                <Canvas.RenderTransform>
                                                    <RotateTransform x:Name="SpinnerRotation"
                                                                     CenterX="80"
                                                                     CenterY="80"
                                                                     Angle="0" />
                                                </Canvas.RenderTransform>

                                                <Canvas.Triggers>
                                                    <EventTrigger RoutedEvent="Canvas.Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetName="SpinnerRotation"
                                                                    Storyboard.TargetProperty="Angle"
                                                                    From="0"
                                                                    To="360"
                                                                    Duration="0:0:1.5"
                                                                    RepeatBehavior="Forever" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </Canvas.Triggers>

                                                <!-- 12 Lines arranged in a circle -->
                                                <Line X1="80" Y1="10" X2="80" Y2="30" Stroke="#9B59B6"
                                                      StrokeThickness="2" />
                                                <Line X1="115" Y1="20" X2="105" Y2="37" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.9" />
                                                <Line X1="140" Y1="45" X2="123" Y2="55" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.8" />
                                                <Line X1="150" Y1="80" X2="130" Y2="80" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.7" />
                                                <Line X1="140" Y1="115" X2="123" Y2="105" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.6" />
                                                <Line X1="115" Y1="140" X2="105" Y2="123" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.5" />
                                                <Line X1="80" Y1="150" X2="80" Y2="130" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.4" />
                                                <Line X1="45" Y1="140" X2="55" Y2="123" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.3" />
                                                <Line X1="20" Y1="115" X2="37" Y2="105" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.2" />
                                                <Line X1="10" Y1="80" X2="30" Y2="80" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.1" />
                                                <Line X1="20" Y1="45" X2="37" Y2="55" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.1" />
                                                <Line X1="45" Y1="20" X2="55" Y2="37" Stroke="#9B59B6"
                                                      StrokeThickness="2" Opacity="0.1" />
                                            </Canvas>

                                            <!-- Scanning Text -->
                                            <StackPanel Canvas.Left="0" Canvas.Top="55" Width="160">
                                                <TextBlock Text="{Binding ScanningText}"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           HorizontalAlignment="Center" />
                                                <TextBlock Text="{Binding ScanProgress, StringFormat={}{0}%}"
                                                           Foreground="#9B59B6"
                                                           FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,5,0,0" />
                                            </StackPanel>
                                        </Canvas>
                                    </Grid>

                                    <!-- System information -->
                                    <Border Grid.Row="2" Style="{StaticResource InfoPanelStyle}" Margin="50,20,50,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="SYSTEM STATUS" Foreground="#BBBBBB"
                                                       FontSize="12" VerticalAlignment="Center" Margin="0" />

                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Issues -->
                                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding ScanResults.IssuesCount}"
                                                               Foreground="#FFA500" FontSize="36"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center" />
                                                    <TextBlock Text="Issues Found" Foreground="#BBBBBB" FontSize="14"
                                                               HorizontalAlignment="Center" Margin="0,5,0,0" />
                                                </StackPanel>

                                                <!-- Performance Score -->
                                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                                    <TextBlock
                                                        Text="{Binding ScanResults.PerformanceScore, StringFormat={}{0}%}"
                                                        Foreground="#9B59B6" FontSize="36"
                                                        FontWeight="Bold"
                                                        HorizontalAlignment="Center" />
                                                    <TextBlock Text="Performance" Foreground="#BBBBBB" FontSize="14"
                                                               HorizontalAlignment="Center" Margin="0,5,0,0" />
                                                </StackPanel>

                                                <!-- Disk Space -->
                                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                                    <TextBlock Text="{Binding ScanResults.FormattedRecoverableSpace}"
                                                               Foreground="#9B59B6" FontSize="36"
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Center" />
                                                    <TextBlock Text="Recoverable" Foreground="#BBBBBB" FontSize="14"
                                                               HorizontalAlignment="Center" Margin="0,5,0,0" />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- Bottom status bar -->
                                <Border Grid.Row="1" Background="#252525" Height="30">
                                    <TextBlock Text="{Binding LastScanText}" Foreground="#999999" FontSize="11"
                                               VerticalAlignment="Center" Margin="15,0,0,0" />
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>

                    <!-- System Information Page -->
                    <DataTemplate DataType="{x:Type viewmodels:SystemInfoViewModel}">
                        <!-- System Information Page Content -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Top toolbar -->
                            <Border Grid.Row="0" Background="#252525" BorderBrush="#333333" BorderThickness="0,0,0,1">
                                <TextBlock Text="SYSTEM INFORMATION" Foreground="#BBBBBB" FontSize="16"
                                           FontWeight="Medium" VerticalAlignment="Center" Margin="20,0,0,0" />
                            </Border>

                            <!-- Main content -->
                            <ScrollViewer Grid.Row="1" Style="{StaticResource SimpleScrollViewer}">
                                <StackPanel Margin="20">
                                    <!-- CPU Information -->
                                    <TextBlock Text="PROCESSOR (CPU)" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,0,0,10" />

                                    <Border Style="{StaticResource InfoPanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:" Foreground="#BBBBBB" />
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding SystemInfo.CpuModel}" Foreground="White" />

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Speed:" Foreground="#BBBBBB"
                                                       Margin="0,5,0,0" />
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding SystemInfo.CpuSpeed}" Foreground="White"
                                                       Margin="0,5,0,0" />

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Cores:" Foreground="#BBBBBB"
                                                       Margin="0,5,0,0" />
                                            <TextBlock Grid.Row="2" Grid.Column="1"
                                                       Text="{Binding SystemInfo.CpuCores}" Foreground="White"
                                                       Margin="0,5,0,0" />

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Threads:"
                                                       Foreground="#BBBBBB" Margin="0,5,0,0" />
                                            <TextBlock Grid.Row="3" Grid.Column="1"
                                                       Text="{Binding SystemInfo.CpuThreads}" Foreground="White"
                                                       Margin="0,5,0,0" />
                                        </Grid>
                                    </Border>

                                    <!-- GPU Information -->
                                    <TextBlock Text="GRAPHICS (GPU)" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,20,0,10" />

                                    <ItemsControl ItemsSource="{Binding SystemInfo.GpuList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource InfoPanelStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Model:"
                                                                   Foreground="#BBBBBB" />
                                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}"
                                                                   Foreground="White" />

                                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Driver:"
                                                                   Foreground="#BBBBBB" Margin="0,5,0,0" />
                                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                                   Text="{Binding DriverVersion}" Foreground="White"
                                                                   Margin="0,5,0,0" />

                                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="VRAM:"
                                                                   Foreground="#BBBBBB" Margin="0,5,0,0" />
                                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                                   Text="{Binding VideoMemory}" Foreground="White"
                                                                   Margin="0,5,0,0" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- RAM Information -->
                                    <TextBlock Text="MEMORY (RAM)" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,20,0,10" />

                                    <Border Style="{StaticResource InfoPanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="Total RAM:" Foreground="#BBBBBB" />
                                            <TextBlock Grid.Column="1" Text="{Binding SystemInfo.TotalRam}"
                                                       Foreground="White" />
                                        </Grid>
                                    </Border>

                                    <ItemsControl ItemsSource="{Binding SystemInfo.RamModules}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource InfoPanelStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Module:"
                                                                   Foreground="#BBBBBB" />
                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                   Text="{Binding Manufacturer}" Foreground="White" />

                                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Capacity:"
                                                                   Foreground="#BBBBBB" Margin="0,5,0,0" />
                                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                                   Text="{Binding Capacity}" Foreground="White"
                                                                   Margin="0,5,0,0" />

                                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Speed:"
                                                                   Foreground="#BBBBBB" Margin="0,5,0,0" />
                                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Speed}"
                                                                   Foreground="White" Margin="0,5,0,0" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Disk Information -->
                                    <TextBlock Text="STORAGE" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,20,0,10" />

                                    <ItemsControl ItemsSource="{Binding SystemInfo.Disks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource InfoPanelStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="120" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Drive:"
                                                                   Foreground="#BBBBBB" />
                                                        <TextBlock Grid.Row="0" Grid.Column="1"
                                                                   Text="{Binding DriveLetter}" Foreground="White" />

                                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Capacity:"
                                                                   Foreground="#BBBBBB" Margin="0,5,0,0" />
                                                        <TextBlock Grid.Row="1" Grid.Column="1"
                                                                   Text="{Binding TotalSize}" Foreground="White"
                                                                   Margin="0,5,0,0" />

                                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Free Space:"
                                                                   Foreground="#BBBBBB" Margin="0,5,0,0" />
                                                        <TextBlock Grid.Row="2" Grid.Column="1"
                                                                   Text="{Binding FreeSpace}" Foreground="White"
                                                                   Margin="0,5,0,0" />

                                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Usage:"
                                                                   Foreground="#BBBBBB" Margin="0,5,0,0" />
                                                        <Grid Grid.Row="3" Grid.Column="1" Margin="0,10,0,5">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>

                                                            <ProgressBar Grid.Row="0" Value="{Binding UsedPercent}"
                                                                         Maximum="100"
                                                                         Style="{StaticResource CustomProgressBarStyle}" />
                                                            <TextBlock Grid.Row="1"
                                                                       Text="{Binding UsedPercent, StringFormat={}{0:0}%}"
                                                                       Foreground="White" Margin="0,5,0,0" />
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- OS Information -->
                                    <TextBlock Text="OPERATING SYSTEM" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,20,0,10" />

                                    <Border Style="{StaticResource InfoPanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="OS:" Foreground="#BBBBBB" />
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SystemInfo.OsName}"
                                                       Foreground="White" />

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Version:"
                                                       Foreground="#BBBBBB" Margin="0,5,0,0" />
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding SystemInfo.OsVersion}" Foreground="White"
                                                       Margin="0,5,0,0" />

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Build:" Foreground="#BBBBBB"
                                                       Margin="0,5,0,0" />
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SystemInfo.OsBuild}"
                                                       Foreground="White" Margin="0,5,0,0" />

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Architecture:"
                                                       Foreground="#BBBBBB" Margin="0,5,0,0" />
                                            <TextBlock Grid.Row="3" Grid.Column="1"
                                                       Text="{Binding SystemInfo.OsArchitecture}" Foreground="White"
                                                       Margin="0,5,0,0" />
                                        </Grid>
                                    </Border>

                                    <!-- Motherboard Information -->
                                    <TextBlock Text="MOTHERBOARD" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,20,0,10" />

                                    <Border Style="{StaticResource InfoPanelStyle}" Margin="0,0,0,20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Manufacturer:"
                                                       Foreground="#BBBBBB" />
                                            <TextBlock Grid.Row="0" Grid.Column="1"
                                                       Text="{Binding SystemInfo.MotherboardManufacturer}"
                                                       Foreground="White" />

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" Foreground="#BBBBBB"
                                                       Margin="0,5,0,0" />
                                            <TextBlock Grid.Row="1" Grid.Column="1"
                                                       Text="{Binding SystemInfo.MotherboardModel}" Foreground="White"
                                                       Margin="0,5,0,0" />
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </DataTemplate>

                    <!-- Startup Items Page -->
                    <DataTemplate DataType="{x:Type viewmodels:StartupItemsViewModel}">
                        <!-- Startup Items Page Content -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Top toolbar -->
                            <Border Grid.Row="0" Background="#252525" BorderBrush="#333333" BorderThickness="0,0,0,1">
                                <TextBlock Text="STARTUP ITEMS" Foreground="#BBBBBB" FontSize="16"
                                           FontWeight="Medium" VerticalAlignment="Center" Margin="20,0,0,0" />
                            </Border>

                            <!-- Main content -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Startup items summary -->
                                <Border Grid.Row="0" Style="{StaticResource InfoPanelStyle}" Margin="20,20,20,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Optimize Startup Items" Foreground="White" FontSize="16"
                                                       FontWeight="Medium" Margin="0,0,0,5" />
                                            <TextBlock
                                                Text="Disabling unnecessary startup items can significantly improve boot time."
                                                Foreground="#BBBBBB" TextWrapping="Wrap" />
                                        </StackPanel>

                                        <Button Grid.Column="1" Content="OPTIMIZE ALL"
                                                Command="{Binding OptimizeAllCommand}"
                                                Style="{StaticResource ActionButtonStyle}"
                                                VerticalAlignment="Center" />
                                    </Grid>
                                </Border>

                                <!-- Startup items list -->
                                <Border Grid.Row="1" Style="{StaticResource InfoPanelStyle}" Margin="20,10,20,10"
                                        Padding="0">
                                    <ScrollViewer Style="{StaticResource SimpleScrollViewer}" Margin="0">
                                        <ItemsControl ItemsSource="{Binding StartupItems}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#2A2A2A" Padding="15,12" Margin="0,0,0,1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="32" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="100" />
                                                                <ColumnDefinition Width="80" />
                                                            </Grid.ColumnDefinitions>

                                                            <Rectangle Grid.Column="0" Width="20" Height="20"
                                                                       Fill="{Binding Impact, Converter={StaticResource ImpactToColorConverter}}"
                                                                       RadiusX="3" RadiusY="3" />

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding Name}" Foreground="White"
                                                                           FontSize="14" />
                                                                <TextBlock Text="{Binding Location}"
                                                                           Foreground="#999999" FontSize="12" />
                                                            </StackPanel>

                                                            <TextBlock Grid.Column="2" Text="{Binding Impact}"
                                                                       Foreground="{Binding Impact, Converter={StaticResource ImpactToColorConverter}}"
                                                                       VerticalAlignment="Center" />

                                                            <CheckBox Grid.Column="3"
                                                                      Style="{StaticResource CustomCheckBoxStyle}"
                                                                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                                      IsEnabled="{Binding IsEssential, Converter={StaticResource InverseBoolConverter}}"
                                                                      Command="{Binding DataContext.ToggleStartupItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                                      CommandParameter="{Binding}"
                                                                      VerticalAlignment="Center" />
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>

                                <!-- Bottom status bar -->
                                <Border Grid.Row="2" Background="#252525" Height="30">
                                    <TextBlock Text="Manage startup applications to improve system boot time"
                                               Foreground="#999999" FontSize="11"
                                               VerticalAlignment="Center" Margin="15,0,0,0" />
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>

                    <!-- Disk Cleaner Page -->
                    <DataTemplate DataType="{x:Type viewmodels:DiskCleanerViewModel}">
                        <!-- Disk Cleaner Page Content -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Top toolbar -->
                            <Border Grid.Row="0" Background="#252525" BorderBrush="#333333" BorderThickness="0,0,0,1">
                                <TextBlock Text="DISK CLEANER" Foreground="#BBBBBB" FontSize="16"
                                           FontWeight="Medium" VerticalAlignment="Center" Margin="20,0,0,0" />
                            </Border>

                            <!-- Main content -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Disk space summary -->
                                <Border Grid.Row="0" Style="{StaticResource InfoPanelStyle}" Margin="20,20,20,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Disk usage visualization -->
                                        <Grid Grid.Column="0" Width="100" Height="100">
                                            <Ellipse Fill="#9B59B6" Width="100" Height="100" />
                                            <Ellipse Fill="#1A1A1A" Width="60" Height="60" />
                                            <TextBlock Text="{Binding UsedSpacePercent, StringFormat={}{0}%}"
                                                       Foreground="White" FontSize="20" FontWeight="Bold"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Grid>

                                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TotalDiskSpace, StringFormat=C: Drive - {0}}"
                                                       Foreground="White" FontSize="16"
                                                       FontWeight="Medium" />
                                            <TextBlock
                                                Text="{Binding RecoverableSpace, StringFormat={}{0} can be recovered}"
                                                Foreground="#9B59B6"
                                                FontSize="14" Margin="0,5,0,0" />
                                        </StackPanel>

                                        <Button Grid.Column="2" Content="CLEAN DISK" Command="{Binding CleanupCommand}"
                                                Style="{StaticResource ActionButtonStyle}" />
                                    </Grid>
                                </Border>

                                <!-- Cleanable items -->
                                <ScrollViewer Grid.Row="1" Style="{StaticResource SimpleScrollViewer}"
                                              Margin="20,10,20,10">
                                    <ItemsControl ItemsSource="{Binding CleanupItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource InfoPanelStyle}">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Name}" Foreground="White"
                                                                       FontSize="14" FontWeight="Medium" />
                                                            <TextBlock Text="{Binding Description}"
                                                                       Foreground="#BBBBBB" FontSize="12"
                                                                       Margin="0,3,0,0" />
                                                        </StackPanel>

                                                        <TextBlock Grid.Column="1" Text="{Binding Size}"
                                                                   Foreground="#9B59B6"
                                                                   FontSize="14" FontWeight="Medium" Margin="0,0,15,0"
                                                                   VerticalAlignment="Center" />

                                                        <CheckBox Grid.Column="2"
                                                                  Style="{StaticResource CustomCheckBoxStyle}"
                                                                  IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                  VerticalAlignment="Center" />
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>

                                <!-- Bottom status bar -->
                                <Border Grid.Row="2" Background="#252525" Height="30">
                                    <TextBlock Text="{Binding LastCleanupText}" Foreground="#999999" FontSize="11"
                                               VerticalAlignment="Center" Margin="15,0,0,0" />
                                </Border>
                            </Grid>
                        </Grid>
                    </DataTemplate>

                    <!-- Settings Page -->
                    <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
                        <!-- Settings Page Content -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Top toolbar -->
                            <Border Grid.Row="0" Background="#252525" BorderBrush="#333333" BorderThickness="0,0,0,1">
                                <TextBlock Text="SETTINGS" Foreground="#BBBBBB" FontSize="16"
                                           FontWeight="Medium" VerticalAlignment="Center" Margin="20,0,0,0" />
                            </Border>

                            <!-- Settings content -->
                            <ScrollViewer Grid.Row="1" Style="{StaticResource SimpleScrollViewer}" Margin="20">
                                <StackPanel>
                                    <!-- General Settings -->
                                    <TextBlock Text="GENERAL SETTINGS" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,0,0,10" />

                                    <Border Style="{StaticResource InfoPanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="Launch at Startup" Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock Text="Start QuantumTune Max when Windows starts"
                                                           Foreground="#BBBBBB" FontSize="12" Margin="0,3,0,0" />
                                            </StackPanel>

                                            <CheckBox Grid.Column="1" Style="{StaticResource CustomCheckBoxStyle}"
                                                      IsChecked="{Binding LaunchAtStartup, Mode=TwoWay}"
                                                      VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>

                                    <Border Style="{StaticResource InfoPanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="Silent Mode" Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock Text="Minimize notifications and alerts"
                                                           Foreground="#BBBBBB" FontSize="12" Margin="0,3,0,0" />
                                            </StackPanel>

                                            <CheckBox Grid.Column="1" Style="{StaticResource CustomCheckBoxStyle}"
                                                      IsChecked="{Binding SilentMode, Mode=TwoWay}"
                                                      VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>

                                    <!-- Scanning Settings -->
                                    <TextBlock Text="SCANNING SETTINGS" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,20,0,10" />

                                    <Border Style="{StaticResource InfoPanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="Scheduled Scans" Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock Text="Automatically scan and optimize your system"
                                                           Foreground="#BBBBBB" FontSize="12" Margin="0,3,0,0" />
                                            </StackPanel>

                                            <CheckBox Grid.Column="1" Style="{StaticResource CustomCheckBoxStyle}"
                                                      IsChecked="{Binding ScheduledScans, Mode=TwoWay}"
                                                      VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>

                                    <Border Style="{StaticResource InfoPanelStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <TextBlock Text="Scanning Frequency" Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock Text="How often QuantumTune scans your system"
                                                           Foreground="#BBBBBB" FontSize="12" Margin="0,3,0,0" />
                                            </StackPanel>

                                            <ComboBox Grid.Column="1" Width="120"
                                                      SelectedValue="{Binding ScanFrequency, Mode=TwoWay}"
                                                      SelectedValuePath="Tag"
                                                      VerticalAlignment="Center">
                                                <ComboBoxItem Content="Daily" Tag="Daily" />
                                                <ComboBoxItem Content="Weekly" Tag="Weekly" />
                                                <ComboBoxItem Content="Monthly" Tag="Monthly" />
                                            </ComboBox>

                                        </Grid>
                                    </Border>

                                    <!-- Account section -->
                                    <TextBlock Text="ACCOUNT" Foreground="#9B59B6" FontSize="14"
                                               FontWeight="Medium" Margin="0,20,0,10" />

                                    <Border Style="{StaticResource InfoPanelStyle}" Margin="0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0">
                                                <TextBlock Text="Free Version" Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock Text="Upgrade to Premium for advanced features"
                                                           Foreground="#BBBBBB" FontSize="12" Margin="0,3,0,15" />
                                            </StackPanel>

                                            <Button Grid.Row="1" Content="UPGRADE TO PREMIUM"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    HorizontalAlignment="Left" />
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </DataTemplate>

                    <!-- Support Page -->
                    <DataTemplate DataType="{x:Type viewmodels:SupportViewModel}">
                        <!-- Support Page Content -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Top toolbar -->
                            <Border Grid.Row="0" Background="#252525" BorderBrush="#333333" BorderThickness="0,0,0,1">
                                <TextBlock Text="SUPPORT" Foreground="#BBBBBB" FontSize="16"
                                           FontWeight="Medium" VerticalAlignment="Center" Margin="20,0,0,0" />
                            </Border>

                            <!-- Support content -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!-- Support options -->
                                <Border Grid.Row="0" Style="{StaticResource InfoPanelStyle}" Margin="20,20,20,0">
                                    <StackPanel>
                                        <TextBlock Text="Get Help with QuantumTune Max" Foreground="White"
                                                   FontSize="18" FontWeight="Medium" Margin="0,0,0,15" />

                                        <TextBlock
                                            Text="We're here to help you optimize your system and resolve any issues. Choose from the support options below:"
                                            Foreground="#BBBBBB" TextWrapping="Wrap" Margin="0,0,0,15" />

                                        <WrapPanel>
                                            <Button Content="USER GUIDE" Command="{Binding OpenUserGuideCommand}"
                                                    Style="{StaticResource ActionButtonStyle}" Margin="0,0,10,0" />
                                            <Button Content="CONTACT SUPPORT" Command="{Binding ContactSupportCommand}"
                                                    Style="{StaticResource ActionButtonStyle}"
                                                    Margin="0,0,10,0" />
                                            <Button Content="VISIT FORUM" Command="{Binding VisitForumCommand}"
                                                    Style="{StaticResource ActionButtonStyle}" />
                                        </WrapPanel>
                                    </StackPanel>
                                </Border>

                                <!-- FAQ Section -->
                                <ScrollViewer Grid.Row="1" Style="{StaticResource SimpleScrollViewer}"
                                              Margin="20,20,20,20">
                                    <StackPanel>
                                        <TextBlock Text="FREQUENTLY ASKED QUESTIONS" Foreground="#9B59B6"
                                                   FontSize="14" FontWeight="Medium" Margin="0,0,0,15" />

                                        <!-- FAQ Item 1 -->
                                        <Border Style="{StaticResource InfoPanelStyle}">
                                            <StackPanel>
                                                <TextBlock Text="Why do I need system optimization?" Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock
                                                    Text="Over time, your Windows system accumulates temporary files, registry errors, and startup programs that can slow down performance. QuantumTune Max identifies and fixes these issues to keep your computer running smoothly."
                                                    Foreground="#BBBBBB" FontSize="12" TextWrapping="Wrap"
                                                    Margin="0,10,0,0" />
                                            </StackPanel>
                                        </Border>

                                        <!-- FAQ Item 2 -->
                                        <Border Style="{StaticResource InfoPanelStyle}">
                                            <StackPanel>
                                                <TextBlock Text="How often should I run optimization?"
                                                           Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock
                                                    Text="We recommend running a full system optimization at least once per week. However, heavily used computers may benefit from more frequent optimization. You can also set up scheduled scans in Settings."
                                                    Foreground="#BBBBBB" FontSize="12" TextWrapping="Wrap"
                                                    Margin="0,10,0,0" />
                                            </StackPanel>
                                        </Border>

                                        <!-- FAQ Item 3 -->
                                        <Border Style="{StaticResource InfoPanelStyle}">
                                            <StackPanel>
                                                <TextBlock Text="Is it safe to disable startup items?"
                                                           Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock
                                                    Text="Yes, QuantumTune Max identifies which startup items are safe to disable. Items marked as 'Essential' are recommended to keep enabled. The program will never disable critical system components."
                                                    Foreground="#BBBBBB" FontSize="12" TextWrapping="Wrap"
                                                    Margin="0,10,0,0" />
                                            </StackPanel>
                                        </Border>

                                        <!-- FAQ Item 4 -->
                                        <Border Style="{StaticResource InfoPanelStyle}" Margin="0">
                                            <StackPanel>
                                                <TextBlock Text="What's the difference between Free and Premium?"
                                                           Foreground="White"
                                                           FontSize="14" FontWeight="Medium" />
                                                <TextBlock
                                                    Text="The Free version offers basic optimization and cleaning features. Premium unlocks advanced features including automatic optimization, real-time monitoring, privacy protection, and priority customer support."
                                                    Foreground="#BBBBBB" FontSize="12" TextWrapping="Wrap"
                                                    Margin="0,10,0,0" />
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Grid>
    </Grid>
</Window>